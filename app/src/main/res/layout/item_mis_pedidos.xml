    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tipoPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/marca_oscuro"
                android:textSize="18sp"
                tools:text="RECOJO EN TIENDA"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/labelNombrePrecio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/marca_oscuro"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/tipoPedido"
                app:layout_constraintTop_toBottomOf="@id/tipoPedido"
                tools:text="TOTAL A PAGAR:" />

            <TextView
                android:id="@+id/estadoPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginStart="4dp"
                android:textColor="@color/marca_oscuro"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/labelNombrePrecio"
                app:layout_constraintTop_toTopOf="@id/labelNombrePrecio"
                tools:text="PENDIENTE" />


            <TextView
                android:id="@+id/totalPagar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/marca_secundario"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/tipoPedido"
                app:layout_constraintTop_toBottomOf="@id/tipoPedido"
                app:layout_constraintEnd_toEndOf="@id/tipoPedido"
                tools:text="S/100.00" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>